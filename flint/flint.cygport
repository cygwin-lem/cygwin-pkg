NAME="flint"
VERSION=2.5.2
RELEASE=2

CATEGORY="Math"
SUMMARY="Fast Library for Number Theory"
DESCRIPTION="Fast Library for Number Theory"

HOMEPAGE="http://flintlib.org/"
SRC_URI="http://flintlib.org/${PN}-${PV}.tar.gz"

PATCH_URI="
flint-cygwin.patch
configure-prefix.patch
t-NTL-interface.patch"

PKG_NAMES="libflint13 libflint-devel"

libflint13_CONTENTS="usr/bin/cygflint-13.dll"
libflint13_SUMMARY="${SUMMARY} - runtime"

libflint_devel_CONTENTS="usr/lib usr/include usr/share"
libflint_devel_SUMMARY="${SUMMARY} - devel"

DIFF_EXCLUDES=""
KEEP_LA_FILES="none"


src_compile() {
        cd ${S}
	lndirs
        cd ${B}
        ${S}/configure  --disable-static \
        --enable-shared \
	--with-gmp \
	--with-mpfr \
	--with-blas \
	--with-ntl
        cygmake
}

src_test() {
	cd ${B}
	cygmake -i check
}
