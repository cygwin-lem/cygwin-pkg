NAME="octave-data-smoothing"
VERSION=1.3.0
OV=1.3.0
RELEASE=2

CATEGORY="Math"
SUMMARY="Octave-Forge data-smoothing: Algorithms for smoothing noisy data "
DESCRIPTION="${SUMMARY} 
Contributed functions for GNU Octave from octave.sourceforge.net"
HOMEPAGE="http://octave.sourceforge.net/"

SRC_URI="http://matzeri.altervista.org/octave-forge/data-smoothing-${PV}.tar"
SRC_DIR="data-smoothing-${PV}"
PATCH_URI="do-octave-update.patch"

PKG_NAMES="${PN}"
octave_data_smoothing_CONTENTS='etc/ usr/'
octave_data_smoothing_REQUIRES="octave octave-optim"

src_compile() {
        cd ${D}
        F77=gfortran
        dodir /usr/share/octave/packages
        dodir /usr/lib/octave/packages

        octave-cli --eval "
        echo on
        diary ../log/diary
        more off
        pkg prefix ${D}/usr/share/octave/packages/ ${D}/usr/lib/octave/packages/
	pkg local_list  ${B}/octave_packages	
	pkg global_list  ${B}/octave_packages	
        pkg build -nodeps -noauto -global -verbose ${B} ${S}/data-smoothing-${PV}.tar.gz
"
}

src_test() {
	: 
}

src_install() {
        cd ${D}

        F77=gfortran
        dodir /usr/share/octave/packages
        dodir /usr/lib/octave/packages

	octave-cli --eval "
	echo on 
        diary ../log/diary 
	more off 
	pkg prefix ${D}/usr/share/octave/packages/ ${D}/usr/lib/octave/packages/
	pkg local_list  ${B}/octave_packages	
	pkg global_list  ${B}/octave_packages	
        pkg install -nodeps -noauto -global -verbose  ${B}/data-smoothing-${OV}.tar.gz 
	pkg list
" 

}
