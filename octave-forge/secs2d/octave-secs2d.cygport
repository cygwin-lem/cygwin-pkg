NAME="octave-secs2d"
VERSION=0.0.9r12205a
OV=0.0.9
RELEASE=1

CATEGORY="Math"
SUMMARY="Octave-Forge secs2D: 2D Drift-Diffusion simulator for semiconductor"
DESCRIPTION="${SUMMARY} 
Contributed functions for GNU Octave from octave.sourceforge.net"
HOMEPAGE="http://octave.sourceforge.net/"

SRC_URI="http://matzeri.altervista.org/octave-forge/secs2d-${PV}.tar"
SRC_DIR="secs2d-${PV}"
PATCH_URI="do-octave-update.patch"

PKG_NAMES="${PN}"
octave_secs2d_CONTENTS='etc usr/'
octave_secs2d_REQUIRES="octave octave-bim"

src_compile() {
        cd ${D}
        F77=gfortran
        dodir /usr/share/octave/packages
        dodir /usr/lib/octave/packages

        octave-cli --eval "
        echo on
        diary ../log/diary
        more off
        pkg prefix ${D}/usr/share/octave/packages/ ${D}/usr/lib/octave/packages/
	pkg local_list  ${B}/octave_packages	
	pkg global_list  ${B}/octave_packages	
        pkg build -nodeps -noauto -global -verbose ${B} ${S}/secs2d-${PV}.tar.gz
"
}

src_test() {
	: 
}

src_install() {
        cd ${D}

        F77=gfortran
        dodir /usr/share/octave/packages
        dodir /usr/lib/octave/packages

	octave-cli --eval "
	echo on 
        diary ../log/diary 
	more off 
	pkg prefix ${D}/usr/share/octave/packages/ ${D}/usr/lib/octave/packages/
	pkg local_list  ${B}/octave_packages	
	pkg global_list  ${B}/octave_packages	
        pkg install -nodeps -noauto -global -verbose  ${B}/secs2d-${OV}.tar.gz 
	pkg list
" 

}
